<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="test-pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>no.studios.atelier.data.Customer</class>
    <class>no.studios.atelier.data.CustomerOrder</class>
    <class>no.studios.atelier.data.OrderStatus</class>
    <class>no.studios.atelier.data.PaymentType</class>
    <class>no.studios.atelier.data.PostPlace</class>

    <properties>
      <!-- common settings -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.ejb.naming_strategy"
                value="org.hibernate.cfg.ImprovedNamingStrategy"/>
      <!-- in memory -->
      <!--
          <property name="hibernate.connection.url"
          value="jdbc:derby:memory:unit-testing-jpa"/>
          <property name="hibernate.connection.driver_class"
          value="org.apache.derby.jdbc.EmbeddedDriver"/>
      -->

      <!-- real test db -->
      <property name="javax.persistence.jdbc.driver"
                value="com.mysql.jdbc.Driver" />

      <property name="javax.persistence.jdbc.url"
                value="jdbc:mysql://localhost/atelierdb"/>
      <property name="javax.persistence.jdbc.user"
                value="atelieruser" />
      <property name="javax.persistence.jdbc.password"
                value="atelierpassword" />




    </properties>
  </persistence-unit>
</persistence>
