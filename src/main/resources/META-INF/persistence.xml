<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="atelier-pu" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/atelierdb</jta-data-source>

    <class>no.studios.atelier.data.Customer</class>
    <class>no.studios.atelier.data.CustomerOrder</class>
    <class>no.studios.atelier.data.OrderStatus</class>
    <class>no.studios.atelier.data.PaymentType</class>
    <class>no.studios.atelier.data.PostPlace</class>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.ejb.naming_strategy"
                value="org.hibernate.cfg.ImprovedNamingStrategy"/>
      <property name="hibernate.dialect"
                value="org.hibernate.dialect.MySQL5Dialect"/>
    </properties>
  </persistence-unit>
</persistence>
