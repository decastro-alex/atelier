<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="OrderStatus">

  <typeAlias alias="OrderStatus"
             type="no.studios.atelier.data.DefaultOrderStatus"
             />

  <resultMap id="orderStatusResult" class="OrderStatus">
    <result property="id" column="id"/>
    <result property="name" column="name"/>
  </resultMap>

  <select id="getAllOrderStatus" resultMap="orderStatusResult">
    select id, name
    from order_status
  </select>

  <select id="getOrderStatusById"
          parameterClass="integer"
          resultMap="orderStatusResult">
    select id, name
    from order_status
    where id=#id#
  </select>

  <insert id="insertOrderStatus" parameterClass="OrderStatus">
    insert into order_status (name)
    values(#name#)
    <selectKey keyProperty="id">
      select max(id) from order_status
    </selectKey>
  </insert>

  <!-- updates a tip orderStatus -->
  <update id="updateOrderStatus" parameterClass="OrderStatus">
    update order_status
    set name=#name#
    where id=#id#
  </update>

  <delete id="deleteOrderStatus" parameterClass="integer">
    delete from order_status where id=#id#
  </delete>

</sqlMap>
