<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>AtelierStrings</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>customerServlet</servlet-name>
    <servlet-class>no.studios.atelier.servlet.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>customerServlet</servlet-name>
    <url-pattern>/customer/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productServlet</servlet-name>
    <servlet-class>no.studios.atelier.servlet.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productServlet</servlet-name>
    <url-pattern>/product/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>invoiceServlet</servlet-name>
    <servlet-class>no.studios.atelier.servlet.InvoiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>invoiceServlet</servlet-name>
    <url-pattern>/invoice/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>customerOrderServlet</servlet-name>
    <servlet-class>no.studios.atelier.servlet.CustomerOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>customerOrderServlet</servlet-name>
    <url-pattern>/order/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderItemServlet</servlet-name>
    <servlet-class>no.studios.atelier.servlet.OrderItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderItemServlet</servlet-name>
    <url-pattern>/order-item/*</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/atelier</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
